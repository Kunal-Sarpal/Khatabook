<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Khatabook</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <style>
    /* Hide scrollbar for Chrome, Safari and Opera */
    .no-scrollbar::-webkit-scrollbar {
      display: none;
    }

    /* Hide scrollbar for IE, Edge and Firefox */
    .no-scrollbar {
      -ms-overflow-style: none;  /* IE and Edge */
      scrollbar-width: none;  /* Firefox */
    }
  </style>
</head>

<body class="bg-gradient-to-r from-blue-200 to-purple-300">
  <main class="m-0 p-0 w-full h-screen">
    <nav class="p-4 px-6 bg-blue-600 flex items-center justify-between shadow-lg">
      <div class="text-3xl font-bold text-white">KHATABOOK</div>
      <div class="flex space-x-6 text-xl text-white">
        <li class="list-none"><a href="" class="hover:text-yellow-300">Home</a></li>
        <li class="list-none"><a href="create" class="hover:text-yellow-300">Create Khata</a></li>
      </div>
    </nav>

    <section class="w-full flex justify-center items-center h-96 mt-10">
      <% if (files.length === 0) { %>
        <div class="text-5xl text-black">
          <a href="create" class="animate-pulse border-2 p-5 hover:bg-red-600 shadow-xl hover:text-white duration-150 rounded-lg border-blue-600">Click to Create Khata...</a>
        </div>
      <% } else { %>
        <div class="shadow-xl list-none w-1/2 text-xl p-3 overflow-y-scroll no-scrollbar bg-white rounded-lg">
          <% files.forEach((item) => { %>
            <li class="m-2 border-2 border-blue-700 bg-blue-500 rounded-md p-4 font-semibold text-white flex justify-between items-center">
              <span><%= item %></span>
              <div class="flex space-x-4 text-md font-light">
                <a href="edit/<%= item %>" class="hover:text-yellow-300">Edit</a>
                <a href="delete/<%= item %>" class="hover:text-yellow-300">Delete</a>
                <a href="read/<%= item %>" class="hover:text-yellow-300">Read</a>
              </div>
            </li>
          <% }) %>
        </div>
      <% } %>
    </section>
  </main>
</body>

</html>
